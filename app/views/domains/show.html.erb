<div class="page-header">
    <h1>View domain
        <small> ( <%= link_to @domain.url, edit_domain_path(@domain) %> )</small>
    </h1>
</div>


<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><%= link_to 'Domains', domains_path %></li>
    <li class="active"><%= @domain %></li>
</ol>

<p>
<table class='table table-striped table-hover'>
    <thead>
    <tr>
        <th>Url</th>
        <th>Status</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <% @urls.each do |url| %>
        <tr>
            <td><%= link_to url.url, url.url %></td>
            <td><%= url.status %></td>
            <td width=30><%= link_to ' ', url, class: 'glyphicon glyphicon-eye-open' %></td>
            <td width=30><%= link_to ' ', edit_url_path(url), class: 'glyphicon glyphicon-edit' %></td>
            <td width=30><%= link_to ' ', url, method: :delete, data: {confirm: 'Are you sure?'}, class: 'glyphicon glyphicon-remove' %></td>
        </tr>
    <% end %>
    </tbody>
</table>
</p>

<div class="panel-footer">
    <%= link_to "update all urls status", domain_status_path(@domain), class: "btn pull-right btn-primary" %>
</div>

<%= paginate @urls %>

